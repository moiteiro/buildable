#!/bin/env ruby
require 'buildable'

case ARGV.first
when 'init'
  Buildable.init
when 'build'
  Buildable.build
when 'version'
  Buildable.VERSION
else
  puts %Q{Usage: buildable [option]
  init\t\tCreate buildable structure
  build\t\tGenerate debian package in ./pkg
  version\tDisplay version
}
end
